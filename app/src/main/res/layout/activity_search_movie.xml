<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_grey"
    tools:context=".activity.SearchMovieActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:background="@drawable/search_background"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/cancel_search"
            android:id="@+id/search_lyt"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:id="@+id/search_icon"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/search_icon"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/search_icon"
                android:layout_toLeftOf="@+id/cross_icon"
                android:padding="10dp"
                android:background="@null"
                android:id="@+id/search_et"
                android:hint="@string/search_here"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/cross_icon"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/cross_icon"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:id="@+id/search_bar_icon"
            android:layout_alignParentRight="true"
            android:src="@mipmap/search_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/cancel_search"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#00b9f4"
            android:layout_alignParentRight="true"
            android:text="@string/cancel"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>


</LinearLayout>